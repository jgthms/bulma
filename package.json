{
  "name": "mikasa",
  "version": "0.7.5",
  "homepage": "https://github.com/mrg0lden/mikasa",
  "author": {
    "name": "Mohammed Bumonther",
    "email": "8347078+mrg0lden@users.noreply.github.com",
    "url": "https://twitter.com/mrg0lden"
  },
  "description": "Modern CSS framework based on Flexbox",
  "main": "bulma.sass",
  "unpkg": "css/bulma.css",
  "style": "bulma/css/bulma.min.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrg0lden/mikasa.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "sass",
    "flexbox",
    "responsive",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/mrg0lden/mikasa/issues"
  },
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "clean-css-cli": "^4.3.0",
    "node-sass": "^4.12.0",
    "postcss-cli": "^6.1.2",
    "rimraf": "^2.6.3"
  },
  "scripts": {
    "build": "npm run build-clean && npm run build-sass && npm run build-autoprefix && npm run build-cleancss",
    "build-autoprefix": "postcss --use autoprefixer --map false --output css/bulma.css css/bulma.css",
    "build-cleancss": "cleancss -o css/bulma.min.css css/bulma.css",
    "build-clean": "rimraf css",
    "build-sass": "node-sass --output-style expanded --source-map true bulma.sass css/bulma.css",
    "deploy": "npm run build",
    "start": "npm run build-sass -- --watch"
  },
  "files": [
    "css",
    "sass",
    "bulma.sass",
    "LICENSE",
    "README.md"
  ]
}
