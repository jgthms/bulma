{
  "name": "bulma",
  "version": "0.9.0",
  "homepage": "https://bulma.io",
  "author": {
    "name": "Jeremy Thomas",
    "email": "bbxdesign@gmail.com",
    "url": "https://jgthms.com"
  },
  "description": "Modern CSS framework based on Flexbox",
  "main": "bulma.sass",
  "unpkg": "css/bulma.css",
  "style": "bulma/css/bulma.min.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jgthms/bulma.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "sass",
    "flexbox",
    "responsive",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/jgthms/bulma/issues"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "clean-css": "^4.2.3",
    "node-sass": "^4.14.1",
    "postcss": "^7.0.32",
    "postcss-calc": "^7.0.2",
    "postcss-cli": "^7.1.1",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "build": "npm run build-clean && npm run build:sass && npm run build:sass-vars && npm run build:rtl",
    "build-clean": "rimraf css",
    "test-theme": "node build.js test/sass/theme.scss test/output/theme.css bulma.sass --themeable",
    "build-sass": "npm run build:sass",
    "build:sass": "node build.js bulma.sass css/bulma.css --map --min",
    "build:sass-vars": "node build.js bulma.sass css/bulma.themeable.css --themeable --full --map --min",
    "rtl": "npm run build:rtl && echo 'The rtl script has been deprecated use build:rtl instead'",
    "build:rtl": "node build.js bulma.sass css/bulma-rtl.css --rtl --map --min",
    "deploy": "npm run build",
    "start": "npm run build-sass -- --watch"
  },
  "bin": {
    "bulma-build-css": "./build.js"
  },
  "files": [
    "css",
    "sass",
    "bulma.sass",
    "LICENSE",
    "README.md"
  ]
}
